<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle is default shape -->
    <!-- round button -->
    <corners android:radius="20dp" />
    <!-- android:angle - angel of color
    android:centerX - position of color in percent
    android:centerColor - color in the middle of button
    android:startColor - color on the left side od button
    android:endColor - color on the right side od button
    android:type - method temporary of color -->
    <gradient
        android:angle="45"
        android:centerColor="#7995A8"
        android:centerX="30%"
        android:endColor="#000000"
        android:startColor="#E8E8E8"
        android:type="linear" />
    <padding
        android:bottom="0dp"
        android:left="4dp"
        android:right="4dp"
        android:top="0dp" />
    <size
        android:width="160dp"
        android:height="60dp" />
    <!-- option of dimension -->
    <stroke
        android:width="3dp"
        android:color="#878787" />
</shape>